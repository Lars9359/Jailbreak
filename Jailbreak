local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

if not player then
    warn("LocalPlayer not found. Make sure this is a LocalScript running on client.")
    return
end

local playerGui = player:WaitForChild("PlayerGui")
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

local farming = false
local skyHeight = 500 -- height to teleport if store closed

-- Wait for Stores folder, adjust this name if different in your game
local storesFolder = workspace:WaitForChild("Stores", 10)
if not storesFolder then
    warn("Stores folder not found in workspace!")
    return
end

-- UI Setup (same as before)
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "k0xxUI"
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.5, -150, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Text = "k0xx.exe"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 30
title.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.8, 0, 0, 40)
button.Position = UDim2.new(0.1, 0, 0, 70)
button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.Gotham
button.TextSize = 20
button.Text = "Start Auto Farm"
button.Parent = frame

local function isStoreOpen(store)
    -- Customize this based on your game
    local openValue = store:FindFirstChild("IsOpen")
    if openValue and openValue.Value == true then
        return true
    end
    return false
end

local function robStore(store)
    if not player.Character then return end
    local hrp = player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    
    local targetPos = nil
    if store.PrimaryPart then
        targetPos = store.PrimaryPart.Position
    elseif store:GetModelCFrame() then
        targetPos = store:GetModelCFrame().p
    else
        warn("Cannot find position for store: "..store.Name)
        return
    end
    
    print("Teleporting to store: "..store.Name)
    hrp.CFrame = CFrame.new(targetPos) + Vector3.new(0, 5, 0)
    wait(1)
    
    -- Insert your robbery logic here.
    -- For example, fire a remote or touch a part.
    print("Robbing store: "..store.Name)
end

local function farm()
    for _, store in pairs(storesFolder:GetChildren()) do
        if store:IsA("Model") then
            print("Checking store: "..store.Name)
            if isStoreOpen(store) then
                robStore(store)
            else
                print("Store closed: "..store.Name..", teleporting to sky")
                local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
                if hrp then
                    hrp.CFrame = CFrame.new(hrp.Position.X, skyHeight, hrp.Position.Z)
                end
                wait(2)
            end
            wait(1)
        end
    end
end

button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "Stop Auto Farm"
        spawn(function()
            while farming do
                farm()
                wait(1)
            end
        end)
    else
        button.Text = "Start Auto Farm"
    end
end)

print("Auto farm script loaded successfully!")
