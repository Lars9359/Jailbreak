local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

local playerGui = player:WaitForChild("PlayerGui")

local farming = false
local skyHeight = 500 -- height to teleport if store closed

-- Example: Folder containing store models
local storesFolder = workspace:WaitForChild("Stores")

-- UI Setup (same as before)
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "k0xxUI"
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.5, -150, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Text = "k0xx.exe"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 30
title.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.8, 0, 0, 40)
button.Position = UDim2.new(0.1, 0, 0, 70)
button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.Gotham
button.TextSize = 20
button.Text = "Start Auto Farm"
button.Parent = frame

-- Function to check if store is open
local function isStoreOpen(store)
    -- Placeholder: customize this depending on your game logic
    -- Example: check if a BoolValue named "IsOpen" exists and is true
    local openValue = store:FindFirstChild("IsOpen")
    if openValue and openValue.Value == true then
        return true
    end
    return false
end

-- Function to perform robbing action
local function robStore(store)
    -- Placeholder: customize based on your game
    -- Example: teleport to store and fire a remote event
    local character = player.Character
    if not character then return end
    local hrp = character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    
    -- Teleport to store's primary part or position
    local targetPos = store.PrimaryPart and store.PrimaryPart.Position or store:GetModelCFrame().p
    hrp.CFrame = CFrame.new(targetPos) + Vector3.new(0, 5, 0)
    
    wait(1) -- wait a bit

    -- Example robbing: fire a remote event (customize with actual remote event)
    -- local remote = game:GetService("ReplicatedStorage"):WaitForChild("RobRemote")
    -- remote:FireServer(store)

    print("Robbed store: "..store.Name)
end

-- Main farming loop
local function farm()
    local character = player.Character
    if not character then return end
    local hrp = character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    for _, store in pairs(storesFolder:GetChildren()) do
        if store:IsA("Model") then
            if isStoreOpen(store) then
                robStore(store)
            else
                -- Teleport high in the sky if store is closed
                hrp.CFrame = CFrame.new(hrp.Position.X, skyHeight, hrp.Position.Z)
                print("Store closed: "..store.Name..", teleported to sky")
                wait(2) -- wait a bit in the sky
            end
            wait(1) -- wait before next store
        end
    end
end

-- Toggle farming on button click
button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "Stop Auto Farm"
        spawn(function()
            while farming do
                farm()
                wait(1)
            end
        end)
    else
        button.Text = "Start Auto Farm"
    end
end)
